{
  "name": "glimmer.js",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "bin/build.js",
    "clean": "bin/clean.js",
    "changelog": "lerna-changelog",
    "test:ember": "yarn workspace @glimmer/component ember try:one",
    "test:types": "dtslint test/types",
    "lint": "eslint . --cache --ext .js,.ts",
    "problems": "tsc -p tsconfig.json --noEmit",
    "start": "webpack-dev-server",
    "test": "yarn lint && testem ci && yarn test:babel-plugins",
    "test:babel-plugins": "mocha -r esm --timeout 5000 test/babel-plugins.js",
    "test:watch": "testem"
  },
  "workspaces": [
    "packages/@glimmer/*",
    "packages/babel-plugins/@glimmer/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/qunit": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-debug-macros": "^0.3.0",
    "babel-plugin-strip-glimmer-utils": "^0.1.1",
    "dtslint": "^1.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fs-extra": "^8.1.0",
    "glob": "^7.0.5",
    "lerna-changelog": "^0.7.0",
    "lerna": "^3.15.0",
    "mkdirp": "^0.5.1",
    "prettier": "^1.18.2",
    "qunit": "^2.9.2",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0",
    "testem": "^2.16.0",
    "ts-loader": "^6.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^1.8.0",
    "typescript": "~3.5.3",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1",
    "webpack": "^4.34.0"
  },
  "changelog": {
    "repo": "glimmerjs/glimmer.js",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal",
      "deprecation": ":warning: Deprecation"
    }
  }
}
