{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "A brand new Glimmer app.",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "scripts/build.js",
    "start": "ember server",
    "lint:hbs": "ember-template-lint .",
    "test": "ember test && yarn run lint:ts && yarn run lint:hbs",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts' -t codeFrame"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.3.3",
    "@babel/preset-env": "^7.5.5",
    "@glimmer/babel-plugin-glimmer-env": "^1.0.0",
    "@glimmer/babel-plugin-strict-template-precompile": "^1.0.0",
    "@glimmer/blueprint": "~<%= blueprintVersion %>",
    "@glimmer/component": "^1.0.0",
    "@glimmer/core": "^1.0.0",
    "@glimmer/helper": "^1.0.0",
    "@glimmer/modifier": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "@types/qunit": "^2.0.31",
    "babel-loader": "^8.0.6",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "qunitjs": "^2.3.3",
    "typescript": "~3.5.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "plugins": ["@typescript-eslint", "prettier"],
    "overrides": [{
      "files": ["webpack.config.js"],
      "env": {
        "node": true
      }
    }]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "browserslist": {
    "production": [
      "> 5%",
      "last 2 Edge versions",
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Safari versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "engines": {
    "node": ">= 12.0"
  },
  "private": true
}
